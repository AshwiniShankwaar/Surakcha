<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       app:cardElevation="8dp"
       android:layout_margin="10dp"
       app:cardCornerRadius="5dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="320dp"
           android:background="@color/lightpink"
           android:padding="10dp"
           >
           <de.hdodenhof.circleimageview.CircleImageView
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/profiledp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="50dp"
               android:layout_marginBottom="10dp"
               android:src="@drawable/profile"
               app:civ_border_width="2dp"
               app:civ_border_color="#000000"
               />

           <TextView
               android:id="@+id/name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/profiledp"
               android:layout_centerVertical="true"
               android:layout_marginTop="12dp"
               android:fontFamily="@font/aclonica"
               android:gravity="center"
               android:paddingLeft="5dp"
               android:paddingTop="5dp"
               android:paddingRight="5dp"
               android:text="username"
               android:textAlignment="center"
               android:textSize="25dp"
               android:textStyle="bold" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center"
               android:id="@+id/maillayout"
               android:layout_below="@+id/name">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/mail"
                   android:padding="1dp"
                   />

               <TextView
                   android:id="@+id/email"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="serif"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text="example@gmail.com"
                   android:textAlignment="center"
                   android:textSize="16dp"
                   android:textStyle="italic" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="5dp"
               android:id="@+id/phonelayout"
               android:layout_below="@+id/maillayout"
               android:gravity="center">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/phone"
                   android:padding="2dp"/>

               <TextView
                   android:id="@+id/phone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="serif"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text="+919278369845"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textStyle="italic" />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/white"
               android:layout_below="@+id/phonelayout"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
               />
       </RelativeLayout>
   </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="10dp"
           app:cardElevation="8dp"
           android:layout_margin="10dp"
           app:cardCornerRadius="5dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/msg_recycler_view_item_background">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="serif"
                   android:gravity="center"
                   android:padding="5dp"
                   android:layout_gravity="center"
                   android:text="Permanent Address:"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textStyle="bold"
                   />

               <TextView
                   android:id="@+id/perAddress"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@drawable/msg_recycler_view_item_background"
                   android:fontFamily="serif"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text="KaliparkBablatala, Gopalpur I, Kolkata, West Bengal "
                   android:textAlignment="center"
                   android:textSize="16dp"
                   android:layout_marginBottom="10dp"
                   android:textStyle="italic" />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="10dp"
           app:cardElevation="8dp"
           android:layout_margin="10dp"
           app:cardCornerRadius="5dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/msg_recycler_view_item_background">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="serif"
               android:gravity="center"
               android:padding="5dp"
               android:layout_marginTop="10dp"
               android:layout_gravity="center"
               android:text="Current Address:"
               android:textAlignment="center"
               android:textSize="18dp"
               android:textStyle="bold"
               />

           <TextView
               android:id="@+id/currAddress"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:background="@drawable/msg_recycler_view_item_background"
               android:fontFamily="serif"
               android:gravity="center"
               android:padding="5dp"
               android:text="KaliparkBablatala, Gopalpur I, Kolkata, West Bengal "
               android:textAlignment="center"
               android:textSize="16dp"
               android:layout_marginBottom="10dp"
               android:textStyle="italic" />
       </LinearLayout>
       </androidx.cardview.widget.CardView>

</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateprofile"
        android:text="Edit"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/lightpink"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>